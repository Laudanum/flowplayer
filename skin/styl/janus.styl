@import "minimalist"

.{root}

	&.fixed-controls, &.is-mouseout, &.is-mouseover 
		.fp-controls
			height 30px
			bg #F

		.fp-timeline
			bg rgb(238,238,238)
			height 100%
			margin-left 67px !important
			margin 0 67px !important
			top 0 !important

		.fp-highlight
			bg #008ed0
			bg rgba(0, 142, 208, 0.5)
			border-left 1px solid #138ed0
			border-right 1px solid #138ed0
			z-index 10
			height 100%
			position relative
			top 0
			width 0
			display none
			&.active
				display block

		.fp-progress
			bg rgba(68,255,255,0.4)
			border-right rgb(68,255,255)
			z-index 20

		.fp-buffer
			bg rgba(153,153,153,0.3)

		.fp-time 
			text-shadow none
			font-size 10px
			color #0
			font-weight normal

			em
				bottom 10px

			.fp-elapsed
				right 5px
				left auto
				text-align right
				opacity 1

			.fp-remaining, .fp-duration
				display none	

		.fp-play
			bottom -3px
			left 5px
			display block
			font-size 11px
			opacity 1
			width 50px
			text-transform uppercase
			color #008ED0
			font-weight bold

		.fp-volume, .fp-embed
			display none

		.fp-fullscreen
			text-indent -99999px

		.fp-engine
			bg rgb(238,238,238)
